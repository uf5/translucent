cabal-version:      >=1.10
name:               translucent
version:            0.1.0.0
license:            BSD3
homepage:           https://github.com/uf5/translucent
build-type:         Simple

library
    exposed-modules:  Lib
    hs-source-dirs:   src
    other-modules:
        AstJson
        Expansion
        JsonTemplate
        Parser
        PythonAst
        Result
        Trans
        Types
        Util

    other-extensions: TemplateHaskell

    -- ghc-options:      -Wall

    default-language: Haskell2010
    build-depends:
        aeson >=2.0.3.0,
        base >=4.7 && <5,
        mtl >=2.2.2,
        parsec >=3.1.15,
        template-haskell >=2.16.0.0

executable translucent-exe
    main-is:          Main.hs
    hs-source-dirs:   app
    default-language: Haskell2010
    build-depends:
        aeson >=2.0.3.0,
        base >=4.7 && <5,
        haskeline >=0.8.2,
        text >=2.0,
        translucent
